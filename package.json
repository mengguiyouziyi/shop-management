    "test:integration": "vitest run apps/web/src/__tests__/integration/*.test.ts",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "deploy:staging": "echo 'Deploying to staging environment'",
    "deploy:prod": "echo 'Deploying to production environment'"
  },
