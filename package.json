    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@vitest/coverage-v8": "^3.2.4",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "playwright": "^1.55.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dexie": "^4.2.0",
